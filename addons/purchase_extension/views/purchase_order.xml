<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_winfood" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'show_address':1}</attribute>
                    <attribute name="options">{"always_reload": True}</attribute>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="check_options"/>
                    <field name="approve_state" readonly="1"/>
                </xpath>
                <xpath expr="//header/button[@name='button_cancel']" position="after">
                    <button name="action_approve" string="Approved"
                            attrs="{'invisible':[('approve_state','=','approve')]}" type="object" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>