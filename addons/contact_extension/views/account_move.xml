<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_winfood" model="ir.ui.view">
            <field name="name">Account Move form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='ref']" position="after">
                    <field name="customer_confirmation" readonly="1" attrs="{'invisible': [('type', '!=', 'out_invoice')]}" string="Customer Information"/>
                </xpath>
            </field>
        </record>
        <!--        Add button invoice portal -->
        <template id="portal_invoice_page_inherit_winfood" inherit_id="account.portal_invoice_page">
            <xpath expr="//div[@class='row mt16 o_portal_invoice_sidebar']/t/t/ul/li[@class='list-group-item flex-grow-1']"
                   position="inside">
                <br/>
                <div class="btn-group flex-grow-1 mr-1 mb-1">
                    <a class="btn btn-secondary btn-block o_download_btn"
                       t-att-href="invoice.account_action_from_portal(report_type='pdf', download=True)"
                       title="Download">
                        <span style="color:white;">CONFIRM</span>
                    </a>
                </div>
            </xpath>
        </template>
        <!--        Add Customer Information -->
        <template id="portal_invoice_page_table_winfood" inherit_id="account.portal_my_invoices">
            <xpath expr="//t/t/thead/tr/th[@class='text-right']" position="before">
                <th class="text-right"></th>
            </xpath>
            <xpath expr="//tbody/t/tr/td[@class='text-right']" position="before">
                <td class="text-right">
                    <span t-field="invoice.customer_confirmation"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>
