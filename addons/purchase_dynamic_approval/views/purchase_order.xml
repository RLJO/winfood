<odoo>
  <data>
    <record id="purchase_order_inherit_form" model="ir.ui.view">
      <field name="name">purchase_order_inherit_form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/group/group[last()]" position="after">
          <group name="approval" string="Approval">
            <field name="approver_ids" widget="many2many_tags"/>
            <field name="acknowledger_ids" widget="many2many_tags"/>
          </group>
        </xpath>
        <xpath expr="//form/header" position="inside">
          <button name="set_approval_process" type="object" string="Run Approval Process"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>